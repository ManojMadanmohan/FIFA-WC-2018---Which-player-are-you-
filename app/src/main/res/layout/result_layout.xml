<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/self_image"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_person_placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:layout_below="@+id/self_image"
            android:id="@+id/player_image"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_person_placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <TextView
        android:text="78% match"
        android:padding="4dp"
        android:width="96dp"
        android:height="96dp"
        android:gravity="center"
        android:fontFamily="@font/fifa_font_family"
        android:background="@mipmap/fifa_circle"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:id="@+id/match_score"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/player_name"
            android:textSize="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="2dp"
            android:fontFamily="@font/fifa_font_family"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/player_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:text="Player Name"/>

        <TextView
            android:id="@id/player_info"
            android:textSize="14dp"
            android:paddingTop="2dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:fontFamily="@font/fifa_font_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text="No. X, Country"/>

    </LinearLayout>



</RelativeLayout>